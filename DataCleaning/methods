CREATE TABLE CustomerTransaction(
    TransactionID INT PRIMARY KEY,
    CustomerName VARCHAR(100),
    Email VARCHAR(100),
    PhoneNumber VARCHAR(20),
    PurchaseAmount DECIMAL(10,2),
    PurchaseDate DATE,
    PurchaseMethod VARCHAR(50),
    Status VARCHAR(50)
);

